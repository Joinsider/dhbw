<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header with date and status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monday, Jan 1"
            android:textColor="@color/widget_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/widget_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:textColor="@color/widget_status_text"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/widget_status_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

    </LinearLayout>

    <!-- Main event content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Software Engineering"
            android:textColor="@color/widget_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09:00 - 12:00"
            android:textColor="@color/widget_text_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/widget_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room A101"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="1dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_location_small"
            android:drawableTint="@color/widget_text_secondary" />

    </LinearLayout>

    <!-- Next event (if available) -->
    <LinearLayout
        android:id="@+id/widget_next_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_next_background"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_next_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next:"
            android:textColor="@color/widget_text_accent"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widget_next_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mathematics at 13:00"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>
