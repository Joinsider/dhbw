<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include general app data but exclude sensitive credential storage -->
    <include domain="sharedpref" path="."/>
    <include domain="database" path="."/>
    <include domain="file" path="."/>

    <!-- Exclude encrypted credentials and security-related files -->
    <exclude domain="sharedpref" path="secure_credentials.xml"/>
    <exclude domain="sharedpref" path="credentials_fallback.xml"/>
    <exclude domain="sharedpref" path="androidx.security.crypto.EncryptedSharedPreferences."/>

    <!-- Exclude DataStore files that might contain sensitive data -->
    <exclude domain="file" path="datastore/"/>
</full-backup-content>